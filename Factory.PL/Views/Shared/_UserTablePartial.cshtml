@model List<UserViewModel>
@inject IViewLocalizer Localizer

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th style="width: 5%;">@Localizer["#"]</th>
                <th style="width: 30%;">@Localizer["Username"]</th>
                <th style="width: 15%;">@Localizer["Status"]</th>
                <th style="width: 50%;">@Localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1; 
            }
            @foreach (var user in Model)
            {
                <tr>
                    <td>@counter</td>
                    <td>@user.UserName</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="text-success">
                                <i class="bi bi-check-circle-fill text-success"></i> @Localizer["Active"]
                            </span>
                        }
                        else
                        {
                            <span class="text-danger">
                                <i class="bi bi-x-circle-fill text-danger"></i> @Localizer["Inactive"]
                            </span>
                        }
                    </td>
                    <td>
                        @if (user.IsActive)
                        {
                            <a href="@Url.Action("Add", "Auth")" class="btn btn-outline-success btn-sm me-2">
                                @Localizer["Add"]
                            </a>
                            <a href="@Url.Action("Edit", "Auth", new { id = user.Id })" class="btn btn-outline-info btn-sm me-2">
                                @Localizer["Edit"]
                            </a>
                            <a href="@Url.Action("Delete", "Auth", new { id = user.Id })" class="btn btn-outline-danger btn-sm">
                                @Localizer["Delete"]
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Edit", "Auth", new { id = user.Id })" class="btn btn-outline-info btn-sm">
                                @Localizer["Edit"]
                            </a>
                        }
                    </td>
                </tr>
                counter++;
            }
        </tbody>
    </table>
</div>