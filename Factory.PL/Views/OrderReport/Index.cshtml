@model Factory.PL.ViewModels.OrderList.OrderReportViewModel
@{
    ViewData["Title"] = "Order Dashboard";
    Layout = "_LogedUser";
}
<div class="container-fluid card shadow-sm p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <p class="text-muted small mt-2">
                <i class="fas fa-sync-alt me-1"></i>Last updated: @DateTime.Now.ToString("yyyy-MM-dd HH-MM")
            </p>
        </div>
        <div class="d-flex gap-2">
            <button onclick="window.print()" class="btn btn-outline-primary">
                <i class="fas fa-print me-1"></i> Print Report
            </button>
        </div>
    </div>
    <style>
        .hover-effect {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        .icon-circle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border h-100 border">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted text-uppercase small mb-2">Total Orders</h6>
                            <p class="h2 fw-bold mb-0">@Model.TotalOrders</p>
                        </div>
                        <div class="icon-circle bg-primary d-flex align-items-center justify-content-center">
                            <i class="bi bi-clipboard fs-1 text-white"></i>
                        </div>
                    </div>
                    <p class="text-muted small mt-3 mb-0">
                        <span class="text-success"><i class="fas fa-arrow-up me-1"></i>5.2%</span> from last month
                    </p>
                </div>
            </div>
        </div>

        <!-- Total Items Card -->
        <div class="col-md-3">
            <div class="card border h-100 border">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted text-uppercase small mb-2">Total Items</h6>
                            <p class="h2 fw-bold mb-0">@Model.TotalItemsData.Sum()</p>
                        </div>
                        <div class="icon-circle bg-success d-flex align-items-center justify-content-center">
                            <i class="bi bi-boxes fs-1 text-white"></i>
                        </div>
                    </div>
                    <p class="text-muted small mt-3 mb-0">
                        <span class="text-danger"><i class="fas fa-arrow-down me-1"></i>3.8%</span> from last month
                    </p>
                </div>
            </div>
        </div>

        <!-- Total SQM Card -->
        <div class="col-md-3">
            <div class="card border h-100 border">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted text-uppercase small mb-2">Total SQM</h6>
                            <p class="h2 fw-bold mb-0">@Math.Round(Model.TotalSQMData.Sum(), 2)</p>
                        </div>
                        <div class="icon-circle bg-warning d-flex align-items-center justify-content-center">
                            <i class="bi bi-pencil fs-1 text-white"></i>
                        </div>
                    </div>
                    <p class="text-muted small mt-3 mb-0">
                        <span class="text-success"><i class="fas fa-arrow-up me-1"></i>8.7%</span> from last month
                    </p>
                </div>
            </div>
        </div>

        <!-- Total LM Card -->
        <div class="col-md-3">
            <div class="card  h-100 border">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted text-uppercase small mb-2">Total LM</h6>
                            <p class="h2 fw-bold mb-0">@Math.Round(Model.TotalLMData.Sum(), 2)</p>
                        </div>
                        <div class="icon-circle bg-danger d-flex align-items-center justify-content-center">
                            <i class="bi bi-bar-chart fs-1 text-white"></i>
                        </div>
                    </div>
                    <p class="text-muted small mt-3 mb-0">
                        <span class="text-success"><i class="fas fa-arrow-up me-1"></i>6.4%</span> from last month
                    </p>
                </div>
            </div>
        </div>
    </div>


