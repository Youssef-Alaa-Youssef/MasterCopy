@model Factory.PL.ViewModels.HR.OffboardingViewModel
@{
    ViewData["Title"] = Localizer["CreateTitle"];
    Layout = "_LogedUser";
}

<div class="container-fluid card shadow-sm p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")

    <form asp-action="Create" method="post">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label">@Localizer["Employee"]</label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeList">
                        <option value="">-- @Localizer["SelectEmployee"] --</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SupervisorId" class="control-label">@Localizer["Supervisor"]</label>
                    <select asp-for="SupervisorId" class="form-control" asp-items="ViewBag.SupervisorList">
                        <option value="">-- @Localizer["SelectSupervisor"] --</option>
                    </select>
                    <span asp-validation-for="SupervisorId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row g-3 mt-2">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="LastWorkingDate" class="control-label">@Localizer["LastWorkingDate"]</label>
                    <input asp-for="LastWorkingDate" type="date" class="form-control" />
                    <span asp-validation-for="LastWorkingDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ExitInterviewDate" class="control-label">@Localizer["ExitInterviewDate"]</label>
                    <input asp-for="ExitInterviewDate" type="date" class="form-control" />
                    <span asp-validation-for="ExitInterviewDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row g-3 mt-2">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="TerminationReason" class="control-label">@Localizer["TerminationReason"]</label>
                    <textarea asp-for="TerminationReason" class="form-control"></textarea>
                    <span asp-validation-for="TerminationReason" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card-footer text-center mt-2">
            <input type="submit" value="@Localizer["Save"]" class="btn btn-outline-primary" />
            <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}