@model Factory.DAL.Models.HR.Employee

@{
    ViewData["Title"] = "حذف الموظف";
    Layout = "_LogedUser";
}

<div class="container-fluid card shadow-sm p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")

    <h3>هل أنت متأكد من حذف هذا الموظف؟</h3>
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">الاسم الكامل:</dt>
                <dd class="col-sm-8">@($"{Model.FirstName} {Model.LastName}")</dd>

                <dt class="col-sm-4">البريد الإلكتروني:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">الهاتف:</dt>
                <dd class="col-sm-8">@Model.Phone</dd>
            </dl>
        </div>
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Employee Image" class="img-thumbnail" style="max-width: 200px;" />
            }
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="card-footer text-center mt-2">
            <input type="submit" value="حذف" class="btn btn-outline-danger" />
            <a asp-action="Index" class="btn btn-secondary">العودة إلى القائمة</a>
        </div>
    </form>
</div>