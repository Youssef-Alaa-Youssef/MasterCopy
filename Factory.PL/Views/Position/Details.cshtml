@model Factory.DAL.Models.HR.Position
@{
    ViewData["Title"] = Localizer["DetailsTitle"];
    Layout = "_LogedUser";
}

<div class="container-fluid card shadow-sm p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">@Localizer["Title"]:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-4">@Localizer["TitleEn"]:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TitleEn)</dd>

                <dt class="col-sm-4">@Localizer["Code"]:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Code)</dd>

                <dt class="col-sm-4">@Localizer["Department"]:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Department.Name)</dd>

                <dt class="col-sm-4">@Localizer["Description"]:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
            </dl>
        </div>
    </div>

    <div class="card-footer text-center mt-2">
        <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
    </div>
</div>