@{
    ViewData["Title"] = "Our Partners";
}
<div class="container py-5">
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4">Our Partners</h1>
            <p class="lead text-muted">We collaborate with industry leaders to deliver exceptional solutions</p>
        </div>
    </div>

    <!-- Strategic Alliances Section -->
    <div class="row mb-5">
        <div class="col-12 text-center" data-aos="fade-up">
            <h2 class="mb-4">Strategic Alliances</h2>
            <div class="row justify-content-center">
                <div class="col-md-2 col-sm-4 col-6 mb-4">
                    <img src="/api/placeholder/150/80" alt="Partner Logo" class="img-fluid partner-logo">
                </div>
                <div class="col-md-2 col-sm-4 col-6 mb-4">
                    <img src="/api/placeholder/150/80" alt="Partner Logo" class="img-fluid partner-logo">
                </div>
                <div class="col-md-2 col-sm-4 col-6 mb-4">
                    <img src="/api/placeholder/150/80" alt="Partner Logo" class="img-fluid partner-logo">
                </div>
                <div class="col-md-2 col-sm-4 col-6 mb-4">
                    <img src="/api/placeholder/150/80" alt="Partner Logo" class="img-fluid partner-logo">
                </div>
                <div class="col-md-2 col-sm-4 col-6 mb-4">
                    <img src="/api/placeholder/150/80" alt="Partner Logo" class="img-fluid partner-logo">
                </div>
            </div>
        </div>
    </div>

    <!-- Technology Partners Section -->
    <div class="row mb-5">
        <div class="col-12 text-center" data-aos="fade-up" data-aos-delay="100">
            <h2 class="mb-4">Technology Partners</h2>
            <p class="mb-5">Leveraging cutting-edge technologies to power our solutions</p>
            <div class="row justify-content-center">
                <div class="col-md-2 col-sm-4 col-6 mb-4">
                    <img src="/api/placeholder/150/80" alt="Tech Partner Logo" class="img-fluid partner-logo">
                </div>
                <div class="col-md-2 col-sm-4 col-6 mb-4">
                    <img src="/api/placeholder/150/80" alt="Tech Partner Logo" class="img-fluid partner-logo">
                </div>
                <div class="col-md-2 col-sm-4 col-6 mb-4">
                    <img src="/api/placeholder/150/80" alt="Tech Partner Logo" class="img-fluid partner-logo">
                </div>
                <div class="col-md-2 col-sm-4 col-6 mb-4">
                    <img src="/api/placeholder/150/80" alt="Tech Partner Logo" class="img-fluid partner-logo">
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Partners Section -->
    <div class="row mb-5">
        <div class="col-12" data-aos="fade-up" data-aos-delay="200">
            <h2 class="text-center mb-5">Featured Partners</h2>
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="/api/placeholder/400/200" class="card-img-top" alt="Partner Image">
                        <div class="card-body">
                            <h5 class="card-title">Partner Name</h5>
                            <p class="card-text">Leading provider of innovative solutions in their industry with over 20 years of experience.</p>
                            <a href="#" class="btn btn-outline-primary">Learn More</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="/api/placeholder/400/200" class="card-img-top" alt="Partner Image">
                        <div class="card-body">
                            <h5 class="card-title">Partner Name</h5>
                            <p class="card-text">Award-winning technology solutions that have transformed businesses across multiple sectors.</p>
                            <a href="#" class="btn btn-outline-primary">Learn More</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="/api/placeholder/400/200" class="card-img-top" alt="Partner Image">
                        <div class="card-body">
                            <h5 class="card-title">Partner Name</h5>
                            <p class="card-text">Global leader providing cutting-edge solutions with a focus on sustainability and innovation.</p>
                            <a href="#" class="btn btn-outline-primary">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Become a Partner Section -->
    <div class="row">
        <div class="col-lg-8 mx-auto text-center" data-aos="fade-up" data-aos-delay="300">
            <h2 class="mb-4">Become a Partner</h2>
            <p class="mb-4">Interested in joining our partner network? We're always looking for innovative companies to collaborate with.</p>
            <a href="/contact" class="btn btn-primary btn-lg">Contact Us</a>
        </div>
    </div>
</div>

<!-- Add CSS for partner logos -->
<style>
    .partner-logo {
        transition: transform 0.3s ease;
        filter: grayscale(100%);
    }

        .partner-logo:hover {
            transform: scale(1.05);
            filter: grayscale(0%);
        }
</style>