@model Factory.PL.ViewModels.Home.Dashboard.AdminDashboardViewModel

<div class="row g-4">
    <div class="col-12 col-lg-8">
        <div class="card border-0 h-100">
            <div class="card-header">
                <i class="bi bi-clock-history me-2"></i> @Localizer["recentActivitiesTitle"]
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    @foreach (var activity in Model.RecentActivities)
                    {
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">@activity.Title</h6>
                                <small>@activity.Time</small>
                            </div>
                            <p class="mb-1">@activity.Description</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-12 col-lg-4">
        <div class="card border-0 h-100">
            <div class="card-header">
                <i class="bi bi-lightning-fill me-2"></i> @Localizer["quickActionsTitle"]
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @foreach (var action in Model.QuickActions)
                    {
                        <button class="btn btn-outline-primary text-start">
                            <i class="bi @action.IconClass me-2"></i> @action.Title
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>