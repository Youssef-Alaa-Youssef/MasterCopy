@inject Microsoft.Extensions.Options.IOptions<Factory.PL.Options.Names> appSettings
@{
    ViewData["Title"] = $"Terms of Service | {appSettings.Value.CompanyName}";
    Layout = "_AuthLayout";
}

<style>
    .text-muted {
        color: #718096 !important;
    }

    .accordion {
        border: 1px solid rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .accordion-item {
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    .accordion-button {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
        background-color: rgba(0, 102, 153, 0.05);
        padding: 1rem 1.5rem;
        transition: background-color 0.3s ease;
    }

        .accordion-button:not(.collapsed) {
            background-color: rgba(0, 102, 153, 0.1);
            color: #2c3e50;
        }

        .accordion-button:focus {
            box-shadow: none;
        }

    .accordion-body {
        font-size: 1rem;
        line-height: 1.8;
        color: #4a5568;
        padding: 1rem 1.5rem;
    }

    /* Hover Effects */
    .accordion-button:hover {
        background-color: rgba(0, 102, 153, 0.1);
    }

    /* Animation */
    .accordion-button.collapsed::after {
        transition: transform 0.3s ease;
    }

    .accordion-button:not(.collapsed)::after {
        transform: rotate(180deg);
    }

    .back-to-login-btns {
        margin-top: 2rem;
        text-align: center;
    }

        .back-to-login-btns .btns {
            background-color: #006699;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

            .back-to-login-btns .btns:hover {
                background-color: #004466;
</style>

<h1 class="display-4 text-center mb-4">Terms of Service</h1>
<p class="text-muted text-center">Last updated: @DateTime.UtcNow.Subtract(TimeSpan.FromDays(10)).ToString("dd-MM-yyyy")</p>

<div class="accordion" id="termsAccordion">
            <!-- Section 1: Introduction -->
            <div class="accordion-item">
                <h3 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        1. Introduction
                    </button>
                </h3>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#termsAccordion">
                    <div class="accordion-body">
                        Welcome to <strong>MasterCopy</strong>! These Terms of Service govern your use of our software solutions for glass factories. By accessing or using our software, you agree to these terms.
                    </div>
                </div>
            </div>

            <!-- Section 2: Eligibility -->
            <div class="accordion-item">
                <h3 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        2. Eligibility
                    </button>
                </h3>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#termsAccordion">
                    <div class="accordion-body">
                        You must be at least 18 years old to use our software. By using our software, you represent that you meet this requirement.
                    </div>
                </div>
            </div>

