@{
    ViewData["Title"] = "Contract Expired";
    Layout = "_LogedUser"; 
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="card-title mb-0">Contract Expired</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                        <p class="lead">
                            Your contract has ended. Please contact the administrator to renew your subscription.
                        </p>
                    </div>
                    <div class="mt-4">
                        <a href="mailto:admin@example.com" class="btn btn-primary btn-lg">
                            <i class="fas fa-envelope mr-2"></i> Contact Administrator
                        </a>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>If you have any questions, feel free to reach out to our support team.</small>
                </div>
            </div>
        </div>
    </div>
</div>