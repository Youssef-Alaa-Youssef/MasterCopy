@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4">Get In Touch</h1>
            <p class="lead text-muted">Have questions about our services? We're here to help you.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-5 mb-lg-0" data-aos="fade-right">
            <h3 class="mb-4">Contact Information</h3>

            <div class="contact-info-item d-flex align-items-center">
                <div class="contact-info-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <div>
                    <h5>Our Location</h5>
                    <p class="mb-0">123 Software Lane, Tech City, TC 12345</p>
                </div>
            </div>

            <div class="contact-info-item d-flex align-items-center">
                <div class="contact-info-icon">
                    <i class="fas fa-phone-alt"></i>
                </div>
                <div>
                    <h5>Call Us</h5>
                    <p class="mb-0">+1 (555) 123-4567</p>
                </div>
            </div>

            <div class="contact-info-item d-flex align-items-center">
                <div class="contact-info-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <div>
                    <h5>Email Us</h5>
                    <p class="mb-0">info@glasssoftware.com</p>
                </div>
            </div>

            <div class="contact-info-item d-flex align-items-center">
                <div class="contact-info-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div>
                    <h5>Working Hours</h5>
                    <p class="mb-0">Monday - Friday: 9:00 AM - 6:00 PM</p>
                </div>
            </div>

            <div class="mt-5">
                <h4>Connect With Us</h4>
                <div class="d-flex mt-3">
                    <a href="#" class="me-3 btn btn-outline-primary btn-sm rounded-circle">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="me-3 btn btn-outline-primary btn-sm rounded-circle">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="me-3 btn btn-outline-primary btn-sm rounded-circle">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a href="#" class="btn btn-outline-primary btn-sm rounded-circle">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-6" data-aos="fade-left">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="mb-4">Send Us a Message</h3>
                    <form asp-action="Contact" method="post" class="contact-form">
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>

                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="subject" name="subject" required>
                        </div>

                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5" data-aos="fade-up">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3024.5558236460987!2d-74.00723058459493!3d40.71303904521976!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a220886aa3d%3A0xf9dae7e4f5c7a0af!2sOne%20World%20Trade%20Center!5e0!3m2!1sen!2sus!4v1644338456768!5m2!1sen!2sus" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>