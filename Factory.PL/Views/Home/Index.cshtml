        </nav>
    </header>

    <div class="content-wrapper">
        <main role="main">
            <!-- Hero Section -->
            <section class="hero-section d-flex align-items-center">
                <img src="https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="Glass manufacturing automation" class="hero-bg" />
