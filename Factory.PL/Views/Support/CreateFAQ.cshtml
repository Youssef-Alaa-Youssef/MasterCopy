@model Factory.DAL.ViewModels.Support.FAQSViewModel

@{
    ViewData["Title"] = "Create FAQ";
    Layout = "_LogedUser";
}

<div class="container-fluid card shadow-sm p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")

    <form asp-action="CreateFAQ" method="post">
        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="Question" class="form-label"></label>
                <input asp-for="Question" class="form-control" placeholder="Enter question" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Answer" class="form-label"></label>
            <textarea asp-for="Answer" class="form-control" rows="5" placeholder="Enter answer"></textarea>
            <span asp-validation-for="Answer" class="text-danger"></span>
        </div>

        <div class="card-footer text-center mt-2">
            <button type="submit" class="btn btn-outline-success">
                <i class="fas fa-save me-2"></i>Create FAQ
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
