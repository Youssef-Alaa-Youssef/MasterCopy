@model Factory.DAL.Models.Support.FAQS

@{
    ViewData["Title"] = "Delete FAQ";
    Layout = "_LogedUser";
}

<div class="container-fluid card shadow-sm p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")

    <h3>Are you sure you want to delete this FAQ?</h3>
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Question</h5>
            <p class="card-text">@Model.Answer</p>
            <p class="text-muted">Category: @Model.Category</p>
        </div>
    </div>
    <div class="card-footer text-center mt-2">

    <form asp-action="DeleteFAQConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-outline-danger">
            <i class="fas fa-trash-alt me-2"></i>Delete
        </button>
        <a asp-action="FAQ" class="btn btn-outline-secondary">
            <i class="fas fa-times me-2"></i>Cancel
        </a>
    </form>
</div>
</div>