@model Factory.DAL.Models.Documentation.Documentation

@{
    ViewData["Title"] = "Delete Documentation";
    Layout = "_LogedUser";
}

<div class="container-fluid card  shadow-sm p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")

    @await Html.PartialAsync("_PageTitle")

    <h3 class="text-muted">Are you sure you want to delete this?</h3>

    <!-- Documentation Details Card -->
    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <!-- Title -->
            <h4 class="card-title text-primary">
                <i class="bi bi-file-earmark-text me-2"></i> @Model.Title
            </h4>

            <!-- Description -->
            <p class="card-text">
                <strong>
                    <i class="bi bi-card-text me-2"></i> Description:
                </strong> @Model.Description
            </p>

            <!-- Content -->
            <p class="card-text">
                <strong>
                    <i class="bi bi-file-text me-2"></i> Content:
                </strong> @Model.Content
            </p>

            <!-- YouTube Video -->
            @if (!string.IsNullOrEmpty(Model.VideoUrl))
            {
                <div class="mt-3">
                    <h5 class="text-secondary">
                        <i class="bi bi-youtube me-2"></i> YouTube Video
                    </h5>
                    <div class="ratio ratio-16x9">
                        <iframe src="@Model.VideoUrl.Replace("watch?v=", "embed/")" allowfullscreen></iframe>
                    </div>
                </div>
            }

            <!-- Created At -->
            <p class="card-text">
                <small class="text-muted">
                    <i class="bi bi-calendar me-2"></i> Created on: @Model.CreatedAt.ToString("yyyy-MM-dd")
                </small>
            </p>
        </div>
    </div>
    <div class="card-footer text-center mt-2">

    <!-- Buttons -->
    <form asp-action="DeleteConfirmed" method="post" class="mt-4 text-center">
        <input type="hidden" asp-for="Id" />
        <!-- Delete Button -->
        <button type="submit" class="btn btn-outline-danger">
            <i class="bi bi-trash me-2"></i> Delete
        </button>
        <!-- Cancel Button -->
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle me-2"></i> Cancel
        </a>
    </form>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}