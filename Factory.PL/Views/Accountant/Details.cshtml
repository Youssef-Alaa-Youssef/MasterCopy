@model Factory.DAL.Models.Finance.FinancialRecord

@{
    ViewData["Title"] = "Details";
    Layout = "_LogedUser";

}

<div class="container-fluid card  shadow-sm p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")

<div>
    <h4>Financial Record</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("C")</dd>
        <dt class="col-sm-2">Transaction Type</dt>
        <dd class="col-sm-10">@Model.TransactionType</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
    </dl>
</div>
<div>
        <div class="card-footer text-center mt-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
</div>

</div>