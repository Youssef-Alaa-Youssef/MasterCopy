@model Factory.DAL.Models.HR.LeaveRequest
@{
    ViewData["Title"] = Localizer["DeleteLeaveRequest"];
    Layout = "_LogedUser";
}

<div class="container-fluid card shadow-sm p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")

    <h3>@Localizer["DeleteConfirmation"]</h3>
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">@Localizer["Employee"]:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Employee.FirstName)</dd>

                <dt class="col-sm-4">@Localizer["StartDate"]:</dt>
                <dd class="col-sm-8">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4">@Localizer["EndDate"]:</dt>
                <dd class="col-sm-8">@Model.EndDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4">@Localizer["Type"]:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-4">@Localizer["Status"]:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="card-footer text-center mt-2">
            <input type="submit" value="@Localizer["Delete"]" class="btn btn-outline-danger" />
            <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
        </div>
    </form>
</div>