@{
    ViewData["Title"] = "Generate Recovery Codes";
    Layout = "_LogedUser";
}

<div class="container-fluid card shadow-sm mt-3 p-4">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")

    <h1 class="h3 mb-3">@ViewData["Title"]</h1>

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Warning!</h4>
        <p>
            Generating new recovery codes will <strong>invalidate</strong> your existing codes.
        </p>
        <p class="mb-0">
            If you lose your device and don't have the recovery codes you will lose access to your account.
        </p>
    </div>

    <div class="row">
        <div class="col-12">
            <form method="post">
                <button type="submit" class="btn btn-danger">Generate New Recovery Codes</button>
                <a asp-action="TwoFactorAuthentication" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>