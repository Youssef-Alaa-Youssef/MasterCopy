@model LogInViewModel
@inject Microsoft.Extensions.Options.IOptions<Factory.PL.Options.Names> appSettings

@{
    ViewData["Title"] = $"Login | {appSettings.Value.CompanyName}";
    Layout = "_Auth";
}

