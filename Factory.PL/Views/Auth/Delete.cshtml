@model UserDetailsViewModel

@{
    ViewData["Title"] = Localizer["Delete User"].Value;
    Layout = "_LogedUser";
}

<div class="container-fluid card shadow mt-3 p-5">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")

    <h3 class="text-center mb-4">@Localizer["Delete User Confirmation"]</h3>

    <div class="row mb-4">
        <div class="col-md-6">
            <p><strong>@Localizer["User Name:"]</strong> @Model.UserName</p>
        </div>
        <div class="col-md-6">
            <p><strong>@Localizer["Email:"]</strong> @Model.Email</p>
        </div>
        <div class="col-md-6">
            <p><strong>@Localizer["Phone Number:"]</strong> @(string.IsNullOrEmpty(Model.PhoneNumber) ? Localizer["Not provided"] : Model.PhoneNumber)</p>
        </div>
    </div>

    <div class="alert alert-warning text-center mb-4">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@Localizer["Warning!"]</strong> @Localizer["Deleting this user cannot be undone. Are you sure you want to proceed?"]
    </div>

    <form method="post" action="@Url.Action("DeleteConfirmed", "Auth", new { id = Model.Id })">
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-outline-danger btn-lg me-2">
                <i class="bi bi-trash-fill me-1"></i> @Localizer["Delete"]
            </button>
            <a href="@Url.Action("Index", "Auth")" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-x-circle me-1"></i> @Localizer["Cancel"]
            </a>
        </div>
    </form>
</div>