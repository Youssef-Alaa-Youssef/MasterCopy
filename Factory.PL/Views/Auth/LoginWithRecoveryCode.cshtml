@model Factory.PL.ViewModels.Auth.LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="container-fluid card shadow-sm mt-2 p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Recovery Code Verification</h3>
            </div>
            <div class="card-body">
                <p>
                    You have requested to log in with a recovery code. This login won't be remembered until you provide
                    an authenticator app code at log in or disable 2FA and log in again.
                </p>

                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="RecoveryCode"></label>
                        <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                        <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Log in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}