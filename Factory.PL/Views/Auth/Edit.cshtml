@model UserEditViewModel

@{
    ViewData["Title"] = Localizer["Edit User"].Value;
    Layout = "_LogedUser";
}

<div class="container-fluid card shadow mt-3 p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-3 mb-3">
                <label asp-for="UserName" class="form-label">@Localizer["Username"]</label>
                <input asp-for="UserName" class="form-control" placeholder="@Localizer["Enter username"]" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-md-3 mb-3">
                <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="@Localizer["Enter email"]" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-3 mb-3">
                <label asp-for="PhoneNumber" class="form-label">@Localizer["Phone Number"]</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="@Localizer["Enter phone number"]" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="col-md-3 mb-3">
                <div class="form-check form-switch mt-4">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
                    <label asp-for="IsActive" class="form-check-label">@Localizer["Active"]</label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-save me-1"></i> @Localizer["Save Changes"]
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left me-1"></i> @Localizer["Back to List"]
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}