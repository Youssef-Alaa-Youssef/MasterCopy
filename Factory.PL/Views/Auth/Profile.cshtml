@model Factory.PL.ViewModels.Auth.ApplicationUserViewModel

@{
    ViewData["Title"] = Localizer["User Profile"].Value;
    Layout = "_LogedUser";
}

<div class="container-fluid card shadow-sm p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")
    <div class="col-md-12">
        <div class="card">
            <div class="card-body text-center">
                <img src="@Model.ProfilePictureUrl" class="rounded-circle mb-3" width="120" height="120" alt="@Localizer["Profile Picture"]">

                <h2 class="fw-bold text-dark">@Model.UserName</h2>
                <p class="text-muted mb-4">@Localizer["Manage your account settings below."]</p>

                <div class="text-start">
                    <!-- User Details -->
                    <h5 class="fw-bold"><i class="bi bi-info-circle me-2"></i> @Localizer["User Information"]</h5>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label fw-bold">@Localizer["Full Name"]</label>
                            <input type="text" class="form-control" value="@Model.UserName" readonly>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">@Localizer["Email"]</label>
                            <input type="text" class="form-control" value="@Model.Email" readonly>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">@Localizer["Phone"]</label>
                            <input type="text" class="form-control" value="@Model.PhoneNumber" readonly>
                        </div>
                    </div>
                    <hr />
                    <h5 class="fw-bold"><i class="bi bi-shield-check me-2"></i> @Localizer["Roles"]</h5>
                    <div class="d-flex flex-wrap gap-2 mb-3">
                        @foreach (var role in Model.Roles)
                        {
                            <span class="badge bg-primary p-2"><i class="bi bi-shield me-1"></i> @role</span>
                        }
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="EditProfile" class="btn btn-outline-primary">
                            <i class="bi bi-pencil me-1"></i> @Localizer["Edit Profile"]
                        </a>
                        <a asp-action="EnableAuthenticator" asp-controller="Auth" class="btn btn-outline-primary">
                            <i class="bi bi-shield-lock me-1"></i> @Localizer["Two-Factor Authentication"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>